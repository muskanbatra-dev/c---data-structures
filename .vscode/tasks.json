{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run Current C++ File",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "g++ -std=c++17 \"${file}\" -o \"${fileBasenameNoExtension}\" && ./\"${fileBasenameNoExtension}\" > output.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
